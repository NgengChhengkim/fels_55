<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Framgia E-Learning System", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("menus.home"), root_path %></li>
        <li><%= link_to t("menus.users"), users_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("menus.wordlist"), words_path %></li>
          <li><%= link_to t("menus.categories"), categories_path %></li>
          <li><%= link_to t("menus.result"), results_path %></li>
          <% if current_user.admin? %>
            <li><%= link_to t("menus.admin"), admin_root_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.username %><b class="caret"></b>
            </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("menus.profile"), current_user %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t("menus.logout"), logout_path %>
                </li>
              </ul>
          </li>
        <% else %>
          <li><%= link_to t("menus.signup"), signup_path %></li>
          <li><%= link_to t("menus.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
