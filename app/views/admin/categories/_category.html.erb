<tr>
  <td><%= category.name %></td>
  <td><%= category.description %></td>
  <td><%= link_to t("links.view_words"), [:admin, category] %></td>
  <td><%= link_to t("links.edit"), edit_admin_category_path(category), remote: true,
                  "data-toggle" => "modal",
                  "data-target" => "#form-modal" %>
  </td>
  <td><%= link_to t("links.delete"), [:admin, category], method: :delete, 
                  data: {confirm: t("messages.confirm_delete")}, 
                  remote: true %>
  </td>
</tr>
