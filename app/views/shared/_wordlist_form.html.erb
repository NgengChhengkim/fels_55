<div class="show-word-list">
  <%= form_for :word, url: words_path, method: "get", remote: true do |f| %>
    <%= f.select :category_id, @categories, {}, {class: "form-control"} %>
    <% {t(:lb_all) => t(:radio_bt_all), t(:lb_learn) => t(:radio_bt_learn), 
        t(:lb_notlearn) => t(:radio_bt_notlearn)}.each do |key, value| %>
      <%= f.radio_button :status, value, checked: value == t(:radio_bt_all) %>
      <%= f.label key %>
    <% end %>
    <%= f.submit t(:btn_submit), class: "btn btn-primary" %>
  <% end %>
</div>
